<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    
    <changeSet author="Josue" id="security-manager-1">
        <createTable tableName="api_credential">
            <column name="uuid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="date_created" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="href" type="VARCHAR(255)"/>
            <column name="last_update" type="TIMESTAMP"/>
            <column name="active" type="BIT(1)">
                <constraints nullable="false"/>
            </column>
            <column name="manager_uuid" type="VARCHAR(255)"/>
            <column name="api_key" type="VARCHAR(255)"/>
            <column name="role_id" type="INT"/>
        </createTable>
    </changeSet>
	
    <changeSet author="Josue" id="security-manager-2">
        <createTable tableName="credential">
            <column name="uuid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="date_created" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="href" type="VARCHAR(255)"/>
            <column name="last_update" type="TIMESTAMP"/>
            <column name="active" type="BIT(1)">
                <constraints nullable="false"/>
            </column>
            <column name="manager_uuid" type="VARCHAR(255)"/>
            <column name="login" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="INT"/>
        </createTable>
    </changeSet>
	
    <changeSet author="Josue" id="security-manager-3">
        <createTable tableName="document">
            <column name="uuid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="date_created" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="href" type="VARCHAR(255)"/>
            <column name="last_update" type="TIMESTAMP"/>
            <column name="content" type="VARCHAR(255)"/>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
	
    <changeSet author="Josue" id="security-manager-4">
        <createTable tableName="hibernate_sequence">
            <column name="next_val" type="BIGINT"/>
        </createTable>
    </changeSet>
	
    <changeSet author="Josue" id="security-manager-">
        <createTable tableName="manager">
            <column name="uuid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="date_created" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="href" type="VARCHAR(255)"/>
            <column name="last_update" type="TIMESTAMP"/>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
	
    <changeSet author="Josue" id="security-manager-6">
        <createTable tableName="manager_invitation">
            <column name="uuid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="date_created" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="href" type="VARCHAR(255)"/>
            <column name="last_update" type="TIMESTAMP"/>
            <column name="active" type="BIT(1)">
                <constraints nullable="false"/>
            </column>
            <column name="token" type="VARCHAR(255)"/>
            <column defaultValue="0000-00-00 00:00:00" name="valid_until" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="author_manager" type="VARCHAR(255)"/>
            <column name="target_manager" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
	
    <changeSet author="Josue" id="security-manager-7">
        <createTable tableName="role">
            <column name="id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="level" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <!-- Primary key -->
    <changeSet author="Josue" id="security-manager-8">
        <addPrimaryKey columnNames="uuid" constraintName="PRIMARY" tableName="api_credential"/>
    </changeSet>
    <changeSet author="Josue" id="security-manager-9">
        <addPrimaryKey columnNames="uuid" constraintName="PRIMARY" tableName="credential"/>
    </changeSet>
    <changeSet author="Josue" id="security-manager-10">
        <addPrimaryKey columnNames="uuid" constraintName="PRIMARY" tableName="document"/>
    </changeSet>
    <changeSet author="Josue" id="security-manager-11">
        <addPrimaryKey columnNames="uuid" constraintName="PRIMARY" tableName="manager"/>
    </changeSet>
    <changeSet author="Josue" id="security-manager-12">
        <addPrimaryKey columnNames="uuid" constraintName="PRIMARY" tableName="manager_invitation"/>
    </changeSet>
    <changeSet author="Josue" id="security-manager-13">
        <addPrimaryKey columnNames="id" constraintName="PRIMARY" tableName="role"/>
    </changeSet>
    
    <!-- Unique constraints-->
    <changeSet author="Josue" id="security-manager-14">
        <addUniqueConstraint columnNames="level" constraintName="uix_level" tableName="role" />
    </changeSet>
    
    <!-- Foreign key -->
    <changeSet author="Josue" id="security-manager-15">
        <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="api_credential" constraintName="FK_apicredential-role" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="role"/>
    </changeSet>
    <changeSet author="Josue" id="security-manager-16">
        <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="credential" constraintName="fk_credential-role" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="role"/>
    </changeSet>
    <changeSet author="Josue" id="security-manager-17">
        <addForeignKeyConstraint baseColumnNames="target_manager" baseTableName="manager_invitation" constraintName="fk_targetManager-manager" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="uuid" referencedTableName="manager"/>
    </changeSet>
    <changeSet author="Josue" id="security-manager-18">
        <addForeignKeyConstraint baseColumnNames="author_manager" baseTableName="manager_invitation" constraintName="fk_authorManager-manager" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="uuid" referencedTableName="manager"/>
    </changeSet>
    <changeSet author="Josue" id="security-manager-19">
        <addForeignKeyConstraint baseColumnNames="manager_uuid" baseTableName="api_credential" constraintName="fk_apicredential-manager" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="uuid" referencedTableName="manager"/>
    </changeSet>
    <changeSet author="Josue" id="security-manager-20">
        <addForeignKeyConstraint baseColumnNames="manager_uuid" baseTableName="credential" constraintName="fk_credential=manager" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="uuid" referencedTableName="manager"/>
    </changeSet>
</databaseChangeLog>
